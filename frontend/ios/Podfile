# Uncomment this line to define a global platform for your project
# Firebase SDK 12.8.0 requires iOS 15.0+, MapLibre 5.12.2 supports iOS 13.0+
# Set to 15.0 to satisfy Firebase requirement
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Add source for MapLibre dependencies
source 'https://cdn.cocoapods.org/'
source 'https://github.com/IndoorAtlas/maplibre-specs.git'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  # Add MapLibre and MapLibreAnnotationExtension from GitHub before Flutter pods
  # These must be declared before flutter_install_all_ios_pods so they're available when maplibre_gl resolves dependencies
  # Fetch MapLibre directly from GitHub since it's not in CocoaPods trunk
  # Version 5.12.2 satisfies both MapLibreAnnotationExtension (~> 5.12.0) and maplibre_gl (~> 5.12.2)
  pod 'MapLibre', :git => 'https://github.com/maplibre/maplibre-native.git', :tag => 'ios-v5.12.2'
  pod 'MapLibreAnnotationExtension', :git => 'https://github.com/m0nac0/maplibre-annotation-extension.git', :branch => 'master'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Set minimum deployment target to iOS 15.0 for Firebase SDK 12.8.0 compatibility
      # MapLibre 5.12.2 also supports iOS 15.0+
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
  
  # Workaround for MapLibreAnnotationExtension dependency issue
  # If the pod is missing, it will be handled by maplibre_gl's podspec
  installer.pod_targets.each do |target|
    if target.name == 'maplibre_gl'
      target.build_configurations.each do |config|
        # Ensure MapLibre dependencies are properly linked
        config.build_settings['OTHER_LDFLAGS'] ||= ['$(inherited)']
      end
    end
  end
end
